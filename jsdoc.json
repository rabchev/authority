{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "includePattern": ".+\\.js(doc)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "markdown": {
        "parser": "gfm",
        "hardwrap": true
    },
    "opts": {
        "recurse": true
    },
    "templates" : {
        "cleverLinks"     : false,
        "monospaceLinks"  : false,
        "default"         : {
            "outputSourceFiles" : true
        },
        "systemName"      : "Authority",
        "footer"          : "",
        "copyright"       : "Authority Copyright Â© 2013-2014 The contributors to the Authority projects.",
        "navType"         : "vertical",
        "theme"           : "custom",
        "linenums"        : true,
        "collapseSymbols" : false,
        "inverseNav"      : false
    }
}
